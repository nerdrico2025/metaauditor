{
  "name": "click-auditor",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "server",
    "client",
    "landing"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:client dev:landing",

    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "dev:landing": "npm run dev --workspace=landing",

    "build": "npm-run-all build:client build:server",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",

    "copy:client": "rm -rf server/public && mkdir -p server/public && cp -r client/dist/* server/public/",

    "db:generate": "npm run db:generate --workspace=server",
    "db:push": "npm run db:push --workspace=server",
    "db:seed": "npm run db:seed --workspace=server"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "http-proxy-middleware": "^3.0.5"
  }
}
